<% layout('layout/boilerplate') %>
    <h1>Register</h1>
    <form action="/register" method="POST" class="val-form" novalidate>
        <div class="mb-3">
            <label class="form-label" for="username">Enter your username:</label>
            <input type="text" name="user[username]" id="username" placeholder="name" class="form-control" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="email">Enter your email id:</label>
            <input type="email" name="user[email]" id=email" placeholder="email " class="form-control" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">Enter your password:</label>
            <input type="password" name="user[password]" id=password" placeholder="****" class="form-control" required>
        </div>
        <div class="d-grid gap-2">
            <button class="btn btn-success btn-sm btn-block">Register</button>
        </div>
    </form>