<% layout('layout/boilerplate') %>

        <h1 class="text-center">All campgrounds!</h1>
        <div class="col-3 offset-9">
                <a href="/campgrounds/new"><button class="btn btn-sm btn-outline-success m-3">Add New
                                Campground</button></a>
        </div>
        <% for (let c of campgrounds) {%>
                <div class="card mb-3">
                        <div class="row">
                                <div class="col-md-4">
                                        <img class="img-fluid" alt="" src="<%= c.image %> ">
                                </div>
                                <div class="col-md-8">
                                        <div class="card-body">
                                                <h5 class="card-title">
                                                        <%= c.title %>
                                                </h5>
                                                <!-- <p class="card-text">
                                                                 <%= c.description %> 
                                                        </p> -->
                                                <p class="card-text">
                                                        <small class="text-muted">
                                                                <%= c.location %>
                                                        </small>
                                                </p>
                                                <a href="/campgrounds/<%= c._id %> " class="btn  btn-danger">View
                                                        Details</a>
                                        </div>
                                </div>
                        </div>
                </div>
                <% } %>