<% layout('layout/boilerplate') %>

        <h1>Edit Campground</h1>
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div>
                        <label for="title">Edit title</label>
                        <input type="text" name="campground[title]" value="<%= campground.title %>" id="title">
                </div>
                <div>
                        <label for="location">Edit location: (town, state)</label>
                        <input type="text" name="campground[location]" value="<%= campground.location %>" id="location">
                </div>
                <button>Save Changes</button>
        </form>
        <a href="/campgrounds/<%= campground._id %> "><button>Back</button></a>