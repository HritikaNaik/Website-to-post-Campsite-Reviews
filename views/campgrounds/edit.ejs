<% layout('layout/boilerplate') %>

        <div class="row">
                <h1 class='text-center'>Edit Campground</h1>
                <div class="col-6 offset-3">
                        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="val-form"
                                novalidate>
                                <div class="mb-3">
                                        <label class="form-label" for="title">Enter title</label>
                                        <input type="text" name="campground[title]" id="title"
                                                value="<%= campground.title %>" placeholder="campground title"
                                                class="form-control" required>
                                </div>
                                <div class="mb-3">
                                        <label class="form-label" for="location">Enter location: (town, state)</label>
                                        <input type="text" name="campground[location]" id="location"
                                                value="<%= campground.location %>" placeholder="campground location"
                                                class="form-control" required>
                                </div>
                                <div class="mb-3">
                                        <label class="form-label" for="picture">Enter image url:</label>
                                        <input type="text" name="campground[image]" id="picture"
                                                value="<%= campground.image %>" placeholder="https://www."
                                                class="form-control" required>
                                </div>
                                <div class="mb-3">
                                        <label class="form-label" for="price">Enter price:</label>
                                        <div class="input-group">
                                                <span class="input-group-text info">$</span>
                                                <input type="text" class="form-control" name="campground[price]"
                                                        id="price" placeholder="0" value="<%= campground.price %>"
                                                        required>
                                                <!-- <span class="input-group-text info">.00</span> -->
                                        </div>
                                </div>
                                <div class="mb-3">
                                        <label class="form-label" for="description">Enter site description:</label>
                                        <textarea name="campground[description]" id="description" class="form-control"
                                                required><%= campground.description %> </textarea>
                                </div>
                                <div class="d-grid gap-2">
                                        <button class="btn btn-info btn-sm btn-block">Save Changes</button>
                                </div>
                        </form>
                        <a href="/campgrounds"><button class="btn btn-outline-dark g m-3">Back</button></a>
                </div>
        </div>